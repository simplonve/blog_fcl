<%= link_to "Nouvel article", new_article_path %>
<% @articles.reverse.each do |article| %>
  <div class="article">
    <h1 class="title">
      <%= article.title %>
    </h1>
    <h3 class="subtitle">
      <%= article.subtitle %>
    </h3>
    <div class="content">
    <%= article.content %>
    </div>
    <%= link_to 'Lire la suite', article_path(article) %>
    <%= link_to 'Editer', edit_article_path(article) %>
  </div>
<% end %>
