<div class="form">
	<%= form_for :article, url: articles_path  do |f| %>
	<p class="selecteur">
			    <%= f.label :"jour" %>
		    <%= f.select :day, (1..31).to_a %>
		    <%= f.label :mois %>
		    <%= f.select :month, ["janv", "févr", "mars", "avr", "mai", "juin", "juil", "août", "sept", "oct", "nov", "déc"] %>
		    <%= f.label :année %>
		    <%= f.select :year, ["2015", "2016", "2017"] %>
	</p> 
	<p>
		<%= f.label :titre %><br>
		<%= f.text_area :title, size: "60x1" %><= mini 10 maxi 30
	</p>
	<p>
		<%= f.label :"sous-titre" %><br>
		<%= f.text_area :subtitle, size: "60x2" %><= mini 10
	</p>
	<p>
		<%= f.label :texte %><br>
		<%= f.cktext_area :content, size: "60x12" %>^ Remplir le champ
	</p>
	<% end %>
<%= link_to "Retour page d'accueil", articles_path %>
</div>		    